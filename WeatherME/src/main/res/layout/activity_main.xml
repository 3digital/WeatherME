<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#7b7b7b"
    tools:context=".MainActivity">

    <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textClock"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/updateView"
        android:onClick=""
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TempImageView"
        android:src="@drawable/sunny"
        android:contentDescription="@string/image"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/listView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Austin"
        android:id="@+id/textView"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/updateView" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bikeButton"
        android:onClick="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/updateView"
        android:layout_alignTop="@+id/updateView" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carButton2"
        android:onClick="true"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textClock"
        android:layout_toRightOf="@+id/updateView"
        android:layout_alignTop="@+id/updateView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/TempView"
        android:layout_alignRight="@+id/textClock"
        android:layout_alignBottom="@+id/TempImageView"
        android:layout_toRightOf="@+id/TempImageView"
        android:layout_below="@+id/textClock" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/TempImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:layout_above="@+id/updateView" />

</RelativeLayout>
