<?xml version="1.0" encoding="UTF-8"?>
<project name="module_weatherme" default="compile.module.weatherme">
  <dirname property="module.weatherme.basedir" file="${ant.file.module_weatherme}"/>
  
  <property name="module.jdk.home.weatherme" value="${jdk.home.android_4.2.2_platform}"/>
  <property name="module.jdk.bin.weatherme" value="${jdk.bin.android_4.2.2_platform}"/>
  <property name="module.jdk.classpath.weatherme" value="jdk.classpath.android_4.2.2_platform"/>
  
  <property name="compiler.args.weatherme" value="${compiler.args}"/>
  
  <property name="weatherme.output.dir" value="${module.weatherme.basedir}/build/classes/debug"/>
  <property name="weatherme.testoutput.dir" value="${module.weatherme.basedir}/build/classes/debug"/>
  
  <path id="weatherme.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="weatherme.module.production.classpath">
    <path refid="${module.jdk.classpath.weatherme}"/>
    <path refid="library.support-v4-13.0.0.classpath"/>
  </path>
  
  <path id="weatherme.runtime.production.module.classpath">
    <pathelement location="${weatherme.output.dir}"/>
    <path refid="library.support-v4-13.0.0.classpath"/>
  </path>
  
  <path id="weatherme.module.classpath">
    <path refid="${module.jdk.classpath.weatherme}"/>
    <pathelement location="${weatherme.output.dir}"/>
    <path refid="library.support-v4-13.0.0.classpath"/>
  </path>
  
  <path id="weatherme.runtime.module.classpath">
    <pathelement location="${weatherme.output.dir}"/>
    <path refid="library.support-v4-13.0.0.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.weatherme">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.weatherme">
    <patternset refid="excluded.from.module.weatherme"/>
  </patternset>
  
  <path id="weatherme.module.sourcepath">
    <dirset dir="${module.weatherme.basedir}">
      <include name="build/source/r/debug"/>
      <include name="build/source/aidl/debug"/>
      <include name="build/source/rs/debug"/>
      <include name="build/source/buildConfig/debug"/>
      <include name="build/res/rs/debug"/>
      <include name="src/main/java"/>
      <include name="src/main/res"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.weatherme" depends="compile.module.weatherme.production,compile.module.weatherme.tests" description="Compile module WeatherME"/>
  
  <target name="compile.module.weatherme.production" depends="register.custom.compilers" description="Compile module WeatherME; production classes">
    <mkdir dir="${weatherme.output.dir}"/>
    <javac2 destdir="${weatherme.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.weatherme}/javac">
      <compilerarg line="${compiler.args.weatherme}"/>
      <bootclasspath refid="weatherme.module.bootclasspath"/>
      <classpath refid="weatherme.module.production.classpath"/>
      <src refid="weatherme.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.weatherme"/>
    </javac2>
    
    <copy todir="${weatherme.output.dir}">
      <fileset dir="${module.weatherme.basedir}/build/source/r/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.weatherme.basedir}/build/source/aidl/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.weatherme.basedir}/build/source/rs/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.weatherme.basedir}/build/source/buildConfig/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.weatherme.basedir}/build/res/rs/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.weatherme.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.weatherme.basedir}/src/main/res">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.weatherme.tests" depends="register.custom.compilers,compile.module.weatherme.production" description="compile module WeatherME; test classes" unless="skip.tests"/>
  
  <target name="clean.module.weatherme" description="cleanup module">
    <delete dir="${weatherme.output.dir}"/>
    <delete dir="${weatherme.testoutput.dir}"/>
  </target>
</project>